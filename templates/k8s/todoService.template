apiVersion: apps/v1beta2 # apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  name: todo-service-deployment
  namespace: dev
  labels:
    app: todo-service
spec:
  replicas: {{todoService-replicas}}
  selector:
    matchLabels:
      app: todo-service
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  
  minReadySeconds: 5
  
  template:
    metadata:
      namespace: dev
      labels:
        app: todo-service
        ci: somedataForOverride{{#random}}2000{{/random}}        
    spec:
      containers:
      - name: todo-service
        image: roured/tdtb-todo:{{docker-ver}}
        imagePullPolicy: {{docker-pull-policy}}
        ports:
        - containerPort: {{webPort}}
        readinessProbe:
          httpGet:
            path: {{readinessProbePath}}
            port: {{webPort}}
        livenessProbe:
          httpGet:
            path: {{livenessProbePath}}
            port: {{webPort}}
          initialDelaySeconds: 10
          timeoutSeconds: 1
        envFrom:
        - configMapRef:
             name: api-urls-config  
        env:		
        {{#jaeger_enable}}
        - name: JAEGER_AGENT_HOST
          valueFrom:
            fieldRef:
              fieldPath: status.hostIP
        - name: InfluxDB
          value: "{{jaeger_url}}"
        - name: FluentD_Host
          valueFrom:
            fieldRef:
              fieldPath: status.hostIP  
        - name: FluentD_Port
          value: "24224"
        {{/jaeger_enable}}              
        - name: TRACING_AGENT_HOST
          valueFrom:
            fieldRef:
              fieldPath: status.hostIP        
              
        
---

kind: Service
apiVersion: v1
metadata:
  name: web-todo
  namespace: dev
spec:
  selector:
    app: todo-service
  ports:
  - name: http
    protocol: TCP
    port: 80
    targetPort: {{webPort}} 
    
---


