@using Shared
@inject InstanceInfo info
@{
    var cacheRefresh = "?cache=" + info.CodeVer.GetHashCode();
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>NgApp</title>
    <base href="/">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/bundles/ngApp/favicon.ico">
</head>
<body>

    <app-root></app-root>
    <script type="text/javascript" src="/bundles/ngApp/runtime.js@(cacheRefresh)"></script>
    <script type="text/javascript" src="/bundles/ngApp/polyfills.js@(cacheRefresh)"></script>
    <script type="text/javascript" src="/bundles/ngApp/styles.js@(cacheRefresh)"></script>
    <script type="text/javascript" src="/bundles/ngApp/vendor.js@(cacheRefresh)"></script>
    <script type="text/javascript" src="/bundles/ngApp/main.js@(cacheRefresh)"></script>

</body>
</html>
